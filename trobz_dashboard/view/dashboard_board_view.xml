<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <record id="dashboard_board_tree" model="ir.ui.view">
            <field name="name">dashboard.board.tree</field>
            <field name="model">dashboard.board</field>
            <field name="type">tree</field>
            <field name="field_parent">widgets</field>
            
            <field name="arch" type="xml">
                <tree string="Board" version="7.0">
                    <field name="name" />
                    <field name="widgets" />
                    <field name="menu_parent_id" />
                </tree>
            </field>
        </record>
        
        <record id="dashboard_board_form" model="ir.ui.view">
            <field name="name">dashboard.board.form</field>
            <field name="model">dashboard.board</field>
            
            <field name="type">form</field>
            
            <field name="arch" type="xml">
                <form string="Board" version="7.0">
                    <group>
                        <field name="name" />
                        <field name="menu_parent_id" />
                    </group>
                    <notebook>
                        <page string="Widgets">
                            <field name="widgets" widget="one2many_list">
                                
                                <form string="Widget">
                                    <notebook>
                                        <page string="General">
                                            <group>
                                                <field name="name" />
                                                <field name="type" />
                                            </group>
                                            <group>
                                                <field name="sequence" />
                                                <field name="width" />
                                                <field name="height" />
                                                <field name="options" />
                                            </group>
                                        </page>    
                                        <page string="Metrics">
                                            <field name="metrics" widget="one2many_list">
                                                <form string="Metric">
                                                    <notebook>
                                                        <page string="General">
                                                            <group col="2">
                                                                <field name="name" />
                                                                <field name="type" />
                                                                <field name="query" />
                                                            
                                                                <field name="x_axis" />
                                                                <field name="y_axis" />
                                                                <field name="options" />
                                                            </group>
                                                        </page>
                                                        <page string="Fields">
                                                            <field name="fields" widget="one2many_list">
                                                                
                                                                <form string="Field">
                                                                     <group>
                                                                        <field name="name"/>
                                                                        <field name="type" />
                                                                    </group>
                                                                    <group>
                                                                        <field name="field_model" />
                                                                        <field name="field_id"/>
                                                                    </group>
                                                               </form>
                                                                <tree string="Fields">
                                                                    <field name="name" />
                                                                    <field name="type" />
                                                                    <field name="field_model" />
                                                                    <field name="field_id" />
                                                                </tree>           
                                                            </field>
                                                        </page>
                                                    </notebook>
                                                    
                                            
                                                </form>
                                                <tree string="Metrics">
                                                    <field name="name"/>
                                                    <field name="type"/>
                                                    <field name="query" />
                                                </tree>            
                                            </field>
                                        </page>
                                    </notebook>    
                                </form>
                                <tree string="Widgets">
                                    <field name="name"/>
                                    <field name="type"/>
                                    <field name="sequence" />
                                    <field name="width" />
                                    <field name="height" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                
                </form>
            </field>
            
            
            
        </record>
        
    </data>
</openerp>
