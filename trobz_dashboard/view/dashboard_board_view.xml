<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <record id="dashboard_board_tree" model="ir.ui.view">
            <field name="name">dashboard.board.tree</field>
            <field name="model">dashboard.board</field>
            <field name="type">tree</field>
            <field name="field_parent">widgets</field>
            
            <field name="arch" type="xml">
                <tree string="Board" version="7.0">
                    <field name="name" />
                    
                    <field name="period_name" />
                    <field name="period_type" />
                    <field name="period_start_at" />
                    <field name="period_end_at" />
                    
                    <field name="widget_ids" />
                    <field name="menu_parent_id" />
                </tree>
            </field>
        </record>
        
        <record id="dashboard_board_form" model="ir.ui.view">
            <field name="name">dashboard.board.form</field>
            <field name="model">dashboard.board</field>
            
            <field name="type">form</field>
            
            <field name="arch" type="xml">
                <form string="Board" version="7.0">
                    <group>
                        <field name="name" />
                        
                        <field name="period_name" />
                        <field name="period_type" />
                        <field name="period_start_at" />
                        <field name="period_end_at" />
                        
                        <field name="menu_parent_id" />
                    </group>
                    <notebook>
                        <page string="Widgets">
                            <field name="widget_ids" widget="many2many">
                                
                                <form string="Widget">
                                    <notebook>
                                        <page string="General">
                                            <group>
                                                <field name="name" />
                                                <field name="type" />
                                            </group>
                                        </page>    
                                        <page string="Metrics">
                                            <field name="metric_ids" widget="many2many">
                                                <form string="Metric">
                                                    <notebook>
                                                        <page string="General">
                                                            <group colspan="2">
                                                                <field name="name" />
                                                                <field name="model" />
                                                                <field name="method" />
                                                                <field name="options" widget="serialized" />
                                                                <field name="values" widget="serialized" />
                                                            </group>
                                                        </page>
                                                        <page string="Fields">
                                                            <field name="field_ids" widget="one2many_list">
                                                                <form string="Field">
                                                                    <group>
                                                                        <field name="name"/>
                                                                        <field name="type_ids" widget="many2many_tags" placeholder="Types..." />
                                                                    </group>
                                                                    <group>
                                                                        <field name="sequence" />
                                                                        <field name="reference" />
                                                                        <field name="sql_name" />
                                                                        <field name="field_name" />
                                                                    </group>
                                                                </form>
                                                                 <tree string="Fields">
                                                                    <field name="name" />
                                                                    <field name="sequence" />
                                                                    <field name="type_ids" />
                                                                    <field name="reference" />
                                                                    <field name="sql_name" />
                                                                    <field name="field_name" />
                                                                </tree>         
                                                            </field>
                                                        </page>
                                                    </notebook>
                                                </form>            
                                            </field>
                                        </page>
                                    </notebook>    
                                </form>
                                <tree string="Widgets">
                                    <field name="name"/>
                                    <field name="type"/>
                                    <field name="metric_ids"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                
                </form>
            </field>
            
            
            
        </record>
        
    </data>
</openerp>
