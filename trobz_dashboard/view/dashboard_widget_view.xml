<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <record id="dashboard_widget_form" model="ir.ui.view">
            <field name="name">dashboard.widget.form</field>
            <field name="model">dashboard.widget</field>
            <field name="type">form</field>
            
            <field name="arch" type="xml">
                <form string="Widget">
                    <notebook>
                        <page string="General">
                            <group>
                                <field name="name" />
                                <field name="type" />
                            </group>
                        </page>    
                        <page string="Metrics">
                            <field name="metric_ids" widget="one2many_list">
                                <form string="Metric">
                                    <notebook>
                                        <page string="General">
                                            <group colspan="2">
                                                <field name="name" />
                                                <field name="model" />
                                                <field name="method" />
                                                <field name="options" widget="serialized" />
                                                <field name="values" widget="serialized" />
                                            </group>
                                        </page>
                                        <page string="Fields">
                                            <field name="field_ids" widget="one2many_list">
                                                <form string="Field">
                                                    <group>
                                                        <field name="name"/>
                                                        <field name="type_ids" widget="many2many_tags" placeholder="Types..." />
                                                    </group>
                                                    <group>
                                                        <field name="reference" />
                                                        <field name="sql_name" />
                                                        <field name="field_name" />
                                                        <field name="model" />
                                                    </group>
                                                </form>
                                                 <tree string="Fields">
                                                    <field name="name" />
                                                    <field name="type_ids" />
                                                    <field name="reference" />
                                                    <field name="sql_name" />
                                                    <field name="field_name" />
                                                    <field name="model" />
                                                </tree>         
                                            </field>
                                        </page>
                                    </notebook>
                                </form>            
                            </field>
                        </page>
                    </notebook>    
                </form>
            </field>                               
        </record>  
       
        <record id="dashboard_widget_tree" model="ir.ui.view">
            <field name="name">dashboard.widget.tree</field>
            <field name="model">dashboard.widget</field>
            <field name="type">tree</field>
                              
            <field name="arch" type="xml">
                <tree string="Widgets">
                    <field name="name"/>
                    <field name="type"/>
                    
                    <field name="board_ids"/>
                    <field name="metric_ids"/>
                </tree>
           </field>
        </record>
    </data>
</openerp>
